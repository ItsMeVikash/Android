<?xml version="1.0" encoding="utf-8"?>
   <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="PAYMENT"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <View
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RadioGroup
                android:layout_width="fill_parent"
                android:padding="10dp"
                android:checkedButton="@id/pay_with_upi"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup_payment">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash On Delivery (COD)"
                    android:id="@+id/cod"
                    android:checked="false" />
                 <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay With UPI"
                    android:id="@+id/pay_with_upi"
                    android:checked="false"
                    android:layout_weight="0.13" />
                <TextView
                    android:padding="10dp"
                    android:text="Once Clicked On Place Order, Don't Close The App We Will revert You To The App Again After Successfull Payemnt."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RadioGroup>
    <Button
        android:id="@+id/place_order"
        android:text="Place Order"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>