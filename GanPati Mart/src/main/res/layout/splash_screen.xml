<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="vikash.ganpatimart.Splash">

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/splash"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/splash_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Ganpati Electricals"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:fontFamily="@font/font1"
        android:textColor="@android:color/black"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/splash_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Welcome To Our Ganpati Mart"
        android:textColor="@color/colorAccent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="@font/font"
        android:text="We make purchasing easy."
        android:textColor="@color/colorAccent"
        />

</LinearLayout>
